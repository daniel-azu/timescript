// ./tsconfig.json

{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "noEmitOnError": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "declaration": true,                      
      "declarationDir": "./dist/@types",
      "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/*.test.ts","**/*.spec.ts"]
}